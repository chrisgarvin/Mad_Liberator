  <% if session['access_token'] && session['access_token_secret'] %>
    <div class="madlib">
      <span class="username">
        <%= link_to @randomTweeter + ':', "https://twitter.com/" + @randomTweeter %>
      </span>
      <span class="tweet">
        <%= partsOfSpeech(@randomTweet) %>
      </span>
    </div>
    <footer>
      <%= form_tag(signout_path, method: 'delete') do %>

        <button class="btn btn-danger" id="sign_out">
          <%= t('button.sign_out') %>
        </button>
      <% end %>
    </footer>
  <% else %>
  <div class="madlib">
    <p>
      It's so <span class="pos">(ADJECTIVE)</span> to have you visit our <span class="pos">(NOUN)</span> today. It's time for you
      to get to Mad Liberating, so go ahead and click the button below to link up
      to your Twitter account and get started!
    </p>
  </div>
    <footer>
      <%= form_tag '/auth/twitter', method: 'get', html: {class: 'form-horizontal'} do %>

        <button class="btn btn-large btn-primary">
          <%= t('button.MadLiberate') %>
        </button>
      <% end %>
    </footer>
  <% end %>
